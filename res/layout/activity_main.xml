<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ivory"
    android:gravity="center_horizontal"
    android:minWidth="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.journal.Tobu.MainActivity" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ems="10" >
    </EditText>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#000000"
        android:layout_marginTop="200dp" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/scrapbook"
            android:orientation="vertical" >

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/Button01"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/scrollView1"
        android:layout_marginTop="45dp"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:onClick="storeFeedEvent"
        android:text="Event" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/scrollView1"
        android:onClick="onCameraClick"
        android:background="@drawable/camera" />

    <Button
        android:id="@+id/button1"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_below="@+id/button2"
        android:layout_marginTop="45dp"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:onClick="storeFeedThought"
        android:text="Thought" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_toLeftOf="@+id/Button01"
        android:layout_alignLeft="@+id/scrollView1"
        android:text="Let&apos;s share"
        android:textColor="#000000"
        android:textSize="25sp" />

</RelativeLayout>